<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/white_radiant"
    tools:context=".MainActivity">


    <Button
        android:layout_weight = "3"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="startGame"
        android:text="@string/play"
        android:background="@drawable/buttonstartstyle"
        android:textColor = "@drawable/startcolor"
        android:textSize = "40sp"
        android:textStyle = "bold"
        style="?android:attr/borderlessButtonStyle"
        />


    <Button
        android:layout_weight = "3"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="custom"
        android:text="@string/custom_categories"
        android:background="@drawable/buttonstartstyle"
        android:textColor = "@drawable/startcolor"
        android:textSize = "40sp"
        android:textStyle = "bold"
        style="?android:attr/borderlessButtonStyle"
        />


    <Button
        android:layout_weight = "3"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="getHighScore"
        android:text="@string/high_scores"
        android:background="@drawable/buttonstartstyle"
        android:textColor = "@drawable/startcolor"
        android:textSize = "40sp"
        android:textStyle = "bold"
        style="?android:attr/borderlessButtonStyle"
        />


    <Button
        android:layout_weight = "3"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="getInfo"
        android:text="@string/info"
        android:background="@drawable/buttonstartstyle"
        android:textColor = "@drawable/startcolor"
        android:textSize = "40sp"
        android:textStyle = "bold"
        style="?android:attr/borderlessButtonStyle"
        />
    <TextView
        android:layout_weight = "3"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:text="" />
</LinearLayout>
