<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iths.asobi" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".AboutActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        <activity android:name=".HighscoreActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        <activity android:name=".CustomCategoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        <activity android:name=".CustomQuestionActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        <activity android:name=".CustomQuestionAddActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        //This is the main activity
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="com.example.iths.asobi.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".GameModeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        <activity android:name=".GameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        <activity android:name=".ResultActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        <activity android:name=".ProfilesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.MainActivity" />
        </activity>
        //This activity is the launcher and is set to show 2.5 seconds (2500ms),
        //then It setÂ´s to MainActivity.java
        //To change use StartActivity.java
        <activity android:name=".StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShowHighScoreActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.iths.asobi.HighscoreActivity" />
        </activity>
    </application>

</manifest>
